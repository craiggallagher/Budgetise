<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_bill" tools:context="com.example.craigg.budgetise.EditBill"
    android:background="#E0FFFF">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edit Bill"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:textAllCaps="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Electricity"
        android:id="@+id/txtElectricity"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:layout_marginTop="113dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="140dp"
        android:text="200.00" />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/delete"
        android:textColor="#FFFFFF"
        android:background="#D80000"
        android:onClick="onClickbtnDelete"
        android:layout_above="@+id/save"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="59dp"
        />
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save"
        android:textColor="#FFFFFF"
        android:background="#23F707"
        android:onClick="onClickbtnSave"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/delete"
        android:layout_alignStart="@+id/delete" />


</RelativeLayout>
